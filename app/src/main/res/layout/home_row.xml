<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_alignParentTop="true"
    android:id="@+id/home_card"
    app:cardBackgroundColor="#09a"
    android:layout_margin="12dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="12dp"
    android:layout_height="wrap_content" >

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="2dp"
        android:id="@+id/row_card">


                <TextView
                    android:text="The Avenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_margin="1dp"
                    android:maxWidth="230dp"
                    android:id="@+id/home_name"
                    android:gravity="left"
                    android:layout_below="@+id/home_image"
                    android:layout_alignStart="@+id/home_image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                android:text="2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_year"
                    android:gravity="left"
                    android:layout_margin="2dp"
                android:layout_alignStart="@+id/home_name"
                android:layout_below="@+id/home_name" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_gallery"
            android:id="@+id/home_image"
            android:foregroundGravity="center"
            android:maxHeight="750px"
            android:minHeight="500px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
                android:text="10/10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_raitng"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/home_name"
            android:layout_alignEnd="@+id/home_image" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar2"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="1"
            android:rating="1"
            android:layout_alignTop="@+id/home_year"
            android:layout_toStartOf="@+id/home_raitng"
            android:layout_alignBottom="@+id/home_raitng" />
    </RelativeLayout>
</android.support.v7.widget.CardView>